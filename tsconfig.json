{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "ES2019"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist/lib",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "src"
  ]
}